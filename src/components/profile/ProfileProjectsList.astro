---
import type { Campaign } from "../../types/campaign";
import CampaignCard from "../home/CampaignCard.svelte";
import Grid from "../library/Grid.svelte";

export interface Props {
    campaigns: Campaign[];
}

const { campaigns } = Astro.props;
const { t } = Astro.locals;
---

<Grid class="grid-cols-1 gap-6 md:grid-cols-2" client:load>
    {campaigns.map((campaign) => <CampaignCard size="small" campaign={campaign} />)}
</Grid>
