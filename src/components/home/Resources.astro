---
import ResourceCard from "./ResourceCard.astro";
import ArrowRightIcon from "../../svgs/ArrowRightIcon.svelte";

const { t } = Astro.locals;

// Mock data for resources - would typically come from an API
const resources = [
    {
        id: 1,
        title: t("home.resources.articles.firstCampaign.title"),
        description: t("home.resources.articles.firstCampaign.description"),
        image: "/imgs/resource-1.png",
        href: "/recursos/primera-campana",
        linkText: t("home.resources.readMore"),
    },
    {
        id: 2,
        title: t("home.resources.articles.testimonials.title"),
        description: t("home.resources.articles.testimonials.description"),
        image: "/imgs/resource-2.png",
        href: "/recursos/testimonios",
        linkText: t("home.resources.readMore"),
    },
    {
        id: 3,
        title: t("home.resources.articles.testimonials.title"),
        description: t("home.resources.articles.testimonials.description"),
        image: "/imgs/resource-2.png",
        href: "/recursos/testimonios-2",
        linkText: t("home.resources.readMore"),
    },
    {
        id: 4,
        title: t("home.resources.articles.firstCampaign.title"),
        description: t("home.resources.articles.firstCampaign.description"),
        image: "/imgs/resource-1.png",
        href: "/recursos/primera-campana-2",
        linkText: t("home.resources.readMore"),
    },
];
---

<section class="wrapper py-16">
    <div class="flex flex-col gap-6">
        <!-- Header with title and view all button -->
        <div
            class="flex flex-col items-start justify-between gap-4 md:flex-row md:items-center md:gap-0"
        >
            <h2
                class="text-xl leading-7 font-bold text-black md:text-2xl md:leading-8 lg:text-4xl lg:leading-[48px]"
            >
                {t("home.resources.title")}
            </h2>
            <a
                href="/recursos"
                class="bg-purple-tint text-tertiary hover:bg-tertiary flex items-center gap-2 rounded-3xl px-4 py-3 text-sm leading-5 font-bold transition-all duration-200 hover:text-white md:px-6 md:py-4 md:text-base md:leading-6"
            >
                <ArrowRightIcon />
                <span class="hidden sm:inline">{t("home.resources.viewAll")}</span>
                <span class="sm:hidden">Ver m√°s</span>
            </a>
        </div>

        <!-- Resources cards grid -->
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
            {
                resources.map((resource) => (
                    <ResourceCard
                        title={resource.title}
                        description={resource.description}
                        image={resource.image}
                        href={resource.href}
                        linkText={resource.linkText}
                    />
                ))
            }
        </div>
    </div>
</section>
