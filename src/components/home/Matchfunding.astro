---
// Matchfunding section derived from Figma design
// Uses design tokens and Tailwind utility classes.
// Later this could be powered by real API data.
const { t } = Astro.locals;

// Mock impact metrics (could be localized / formatted later)
const impact = [
    { label: t("home.matchfunding.impact.matchers"), value: "35.717" },
    { label: t("home.matchfunding.impact.successRate"), value: "5%" },
    { label: t("home.matchfunding.impact.community"), value: "89.316" },
];

// Mock active / past calls (simplified from Figma example)
interface CallCard {
    title: string;
    grant: string; // Dotación
    statLabel1: string;
    statValue1: string;
    statLabel2: string;
    statValue2: string;
    cta: string;
    tag?: string;
    background: string; // temp image url
    finished?: boolean;
}

const calls: CallCard[] = [
    {
        title: "Hacendera de proyectos",
        grant: "200.000€",
        statLabel1: t("home.matchfunding.cards.grant"),
        statValue1: "200.000€",
        statLabel2: t("home.matchfunding.cards.inscription"),
        statValue2: "15/08/2025",
        cta: t("home.matchfunding.cards.apply"),
        background: "http://localhost:3845/assets/a268eb672b839cca7cd25039c6fe9e3d713a71c2.png",
    },
    {
        title: "Reeixim L`oesst",
        grant: "200.000€",
        statLabel1: t("home.matchfunding.cards.grant"),
        statValue1: "200.000€",
        statLabel2: t("home.matchfunding.cards.participants"),
        statValue2: "15 proyectos",
        cta: t("home.matchfunding.cards.viewCampaigns"),
        background: "http://localhost:3845/assets/80a5ced65d80e65f6f33002188dd4c385641c66e.png",
        tag: t("home.matchfunding.cards.finished", { date: "24/09/25" }),
        finished: true,
    },
];
---

<section class="bg-tertiary w-full text-white">
    <div class="wrapper relative !my-[-32px]">
        <!-- Two top info panels -->
        <div class="flex flex-col gap-6">
            <div class="flex flex-col gap-6 lg:flex-row lg:justify-between">
                <!-- What is Matchfunding -->
                <div
                    class="backdrop-blur-md/0 flex flex-col gap-10 rounded-2xl bg-[#543f59] p-10 lg:w-1/2"
                >
                    <div class="text-purple-tint flex flex-col gap-4 text-balance">
                        <h2 class="text-purple-tint text-4xl font-bold">
                            {t("home.matchfunding.title")}
                        </h2>
                        <p class="text-base leading-6 text-white/90">
                            {t("home.matchfunding.description")}
                        </p>
                    </div>
                    <div class="flex flex-wrap gap-4">
                        <a
                            href="/matchfunding"
                            class="group relative flex items-center gap-2 rounded-3xl border border-white/40 bg-white/20 px-6 py-4 text-sm font-bold text-white backdrop-blur-md transition hover:bg-white/30"
                        >
                            {t("home.matchfunding.actions.learnMore")}
                        </a>
                        <a
                            href="/convocatorias"
                            class="bg-purple-tint text-tertiary rounded-3xl px-6 py-4 text-sm font-bold transition hover:opacity-90"
                        >
                            {t("home.matchfunding.actions.viewCalls")}
                        </a>
                    </div>
                </div>
                <!-- Impact data -->
                <div
                    class="backdrop-blur-md/0 flex flex-col gap-10 rounded-2xl bg-[#543f59] p-10 lg:w-1/2"
                >
                    <div class="text-purple-tint flex flex-col gap-4">
                        <h3 class="text-purple-tint text-4xl font-bold">
                            {t("home.matchfunding.impact.title")}
                        </h3>
                        <p class="text-base leading-6 text-white/90">
                            {t("home.matchfunding.impact.description")}
                        </p>
                    </div>
                    <div class="flex flex-wrap items-start justify-between gap-8">
                        {
                            impact.map((item) => (
                                <div class="flex flex-col gap-2" data-label={item.label}>
                                    <span class="text-sm text-white/80">{item.label}</span>
                                    <span class="text-4xl font-bold tracking-tight">
                                        {item.value}
                                    </span>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>

            <!-- Calls (cards) -->
            <div class="flex flex-col gap-6 lg:flex-row">
                {
                    calls.map((card) => (
                        <div
                            class="relative flex w-full flex-col justify-between overflow-hidden rounded-3xl bg-cover bg-center text-white lg:w-1/2"
                            style={`background-image:url(${card.background});`}
                        >
                            <div class="flex flex-col gap-10 p-10">
                                <div class="flex flex-col gap-4">
                                    <h4 class="text-3xl font-bold">{card.title}</h4>
                                    <div class="flex gap-6">
                                        <div class="flex flex-col">
                                            <span class="text-sm text-white/80">
                                                {card.statLabel1}
                                            </span>
                                            <span class="text-2xl font-bold">
                                                {card.statValue1}
                                            </span>
                                        </div>
                                        <div class="flex flex-col">
                                            <span class="text-sm text-white/80">
                                                {card.statLabel2}
                                            </span>
                                            <span class="text-2xl font-bold">
                                                {card.statValue2}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <a
                                    href="/convocatorias"
                                    class="bg-purple-tint text-tertiary inline-block rounded-3xl px-6 py-4 text-sm font-bold transition hover:opacity-90"
                                >
                                    {card.cta}
                                </a>
                            </div>
                            {card.tag && (
                                <div class="absolute top-6 right-6 rounded bg-[var(--color-tertiary,#e94668)] px-2 py-1 text-xs font-medium text-white">
                                    {card.tag}
                                </div>
                            )}
                            <div class="pointer-events-none absolute inset-0 bg-black/30" />
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
