---
// Matchfunding section derived from Figma design
// Uses design tokens and Tailwind utility classes.
// Later this could be powered by real API data.
import hacenderaImage from "./hacendera-de-proyectos.png";
import reeiximImage from "./reeixim-loesst.png";

const { t } = Astro.locals;

// Mock impact metrics (could be localized / formatted later)
const impact = [
    { label: t("home.matchfunding.impact.matchers"), value: "2.192.716 €" },
    { label: t("home.matchfunding.impact.successfulProjects"), value: "255" },
    { label: t("home.matchfunding.impact.successRate"), value: "91%" },
];

// Mock active / past calls (simplified from Figma example)
interface CallCardStat {
    label: string;
    value: string;
}

interface CallCard {
    title: string;
    stats: CallCardStat[]; // supports 2 or more stats depending on the card
    cta: string;
    tag?: string;
    background: string; // temp image url
    finished?: boolean;
}

const calls: CallCard[] = [
    {
        title: "Hacendera de proyectos",
        stats: [
            { label: t("home.matchfunding.cards.grant"), value: "200.000€" },
            { label: t("home.matchfunding.cards.inscription"), value: "15/08/2025" },
        ],
        // Figma CTA copy
        cta: "Inscríbete en la convocatoria",
        background: hacenderaImage.src,
    },
    {
        title: "Reeixim L`oesst",
        stats: [
            { label: t("home.matchfunding.cards.grant"), value: "200.000€" },
            { label: t("home.matchfunding.cards.participants"), value: "15 proyectos" },
            // TODO i18n: add proper key for "Proyectos acabados con éxito"
            { label: "Proyectos acabados con éxito", value: "4 proyectos" },
        ],
        cta: "Ver las campañas de la convocatoria",
        background: reeiximImage.src,
        tag: `Finalizada 24/09/25`,
        finished: true,
    },
];
---

<section class="bg-tertiary w-full text-white">
    <div class="wrapper relative !my-[-32px]">
        <!-- Two top info panels -->
        <div class="flex flex-col gap-6">
            <div class="flex flex-col gap-6 lg:flex-row lg:justify-between">
                <!-- What is Matchfunding -->
                <div
                    class="backdrop-blur-md/0 flex flex-col gap-10 rounded-2xl bg-[rgba(143,124,146,0.4)] p-10 lg:w-1/2"
                >
                    <div class="text-light-accent flex flex-col gap-4 text-balance">
                        <h2 class="text-light-accent text-4xl font-bold">
                            {t("home.matchfunding.title")}
                        </h2>
                        <p class="text-base leading-6 text-white">
                            {t("home.matchfunding.description")}
                        </p>
                    </div>
                    <div class="flex flex-wrap gap-4">
                        <a
                            href="/matchfunding"
                            class="group relative flex items-center gap-2 rounded-3xl border border-white/40 bg-white/20 px-6 py-4 text-sm font-bold text-white backdrop-blur-md transition hover:bg-white/30"
                        >
                            {t("home.matchfunding.actions.learnMore")}
                        </a>
                        <a
                            href="/convocatorias"
                            class="bg-light-accent text-tertiary rounded-3xl px-6 py-4 text-sm font-bold transition hover:opacity-90"
                        >
                            {t("home.matchfunding.actions.viewCalls")}
                        </a>
                    </div>
                </div>
                <!-- Impact data -->
                <div
                    class="backdrop-blur-md/0 flex flex-col gap-10 rounded-2xl bg-[rgba(143,124,146,0.4)] p-10 lg:w-1/2"
                >
                    <div class="text-light-accent flex flex-col gap-4">
                        <h3 class="text-light-accent text-4xl font-bold">
                            {t("home.matchfunding.impact.title")}
                        </h3>
                        <p class="text-base leading-6 text-white">
                            {t("home.matchfunding.impact.description")}
                        </p>
                    </div>
                    <div class="flex flex-wrap items-start justify-between gap-8">
                        {
                            impact.map((item) => (
                                <div class="flex flex-col gap-2" data-label={item.label}>
                                    <span class="text-sm text-white">{item.label}</span>
                                    <span class="text-4xl font-bold tracking-tight">
                                        {item.value}
                                    </span>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>

            <!-- Calls (cards) -->
            <div class="flex flex-col gap-6 lg:flex-row">
                {
                    calls.map((card) => (
                        <div
                            class="relative flex w-full flex-col justify-between overflow-hidden rounded-3xl bg-cover bg-center text-white lg:w-1/2"
                            style={`background-image:url(${card.background});`}
                        >
                            <div class="relative z-10 flex flex-col gap-10 p-10">
                                <div class="flex flex-col gap-4">
                                    <h4 class="text-3xl font-bold">{card.title}</h4>
                                    <div class="flex gap-6">
                                        {card.stats.map((s) => (
                                            <div class="flex flex-col">
                                                <span class="text-sm text-white">{s.label}</span>
                                                <span class="text-2xl font-bold">{s.value}</span>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                                <a
                                    href="/convocatorias"
                                    class="bg-light-accent text-tertiary w-fit rounded-3xl px-6 py-4 text-sm font-bold transition hover:opacity-90"
                                >
                                    {card.cta}
                                </a>
                            </div>
                            {card.tag && (
                                <div class="absolute top-6 right-6 z-20 rounded bg-[#E94668] px-2 py-1 text-xs font-medium text-white">
                                    {card.tag}
                                </div>
                            )}
                            <div class="pointer-events-none absolute inset-0 z-0 bg-gradient-to-r from-black/70 to-black/30" />
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
