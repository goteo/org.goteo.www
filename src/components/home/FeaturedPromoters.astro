---
import PromoterCard from "./PromoterCard.astro";
import type { Promoter } from "../../types/promoter";
import ArrowRightIcon from "../../svgs/ArrowRightIcon.svelte";

const { t } = Astro.locals;

// Mock data for the featured promoters - would typically come from an API
const promoters: Promoter[] = [
    {
        id: 1,
        name: "La Marea",
        image: "/imgs/project-owners/la-marea.png",
        projectsPromoted: 4,
        capitalRaised: "539.689 €",
        variant: "1",
    },
    {
        id: 2,
        name: "Agrocuir",
        image: "/imgs/project-owners/agrocuir.png",
        projectsPromoted: 4,
        capitalRaised: "71.472 €",
        variant: "2",
    },
    {
        id: 3,
        name: "IRIDIA",
        image: "/imgs/project-owners/iridia.png",
        projectsPromoted: 9,
        capitalRaised: "311.258 €",
        variant: "3",
    },
];
---

<section class="wrapper py-16">
    <div class="flex flex-col gap-6">
        <!-- Header with title and view all button -->
        <div class="flex items-center justify-between px-0 md:px-0">
            <h2 class="text-2xl leading-8 font-bold text-black">
                {t("home.featuredPromoters.title")}
            </h2>
            <a
                href="/promoters"
                class="bg-variant1 text-secondary hover:bg-secondary hover:text-white flex items-center gap-2 rounded-3xl px-6 py-4 text-base leading-6 font-bold transition-all duration-200"
            >
                <ArrowRightIcon />
                {t("home.featuredPromoters.viewAll")}
            </a>
        </div>

        <!-- Promoters cards grid -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
            {promoters.map((promoter) => <PromoterCard promoter={promoter} />)}
        </div>
    </div>
</section>
