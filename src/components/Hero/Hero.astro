---
import heroImage from "./hero.png";

const { t } = Astro.locals;
---

<section class="wrapper hero-section flex min-h-[60vh] items-center">
    <div class="container mx-auto">
        <div class="grid items-center gap-12 lg:grid-cols-2">
            <!-- Hero Content -->
            <div class="space-y-8">
                <h1 class="text-tertiary text-4xl leading-tight font-bold lg:text-5xl xl:text-6xl">
                    {t("hero.title")}
                </h1>

                <div class="space-y-1 text-lg leading-relaxed text-neutral-500">
                    {t("hero.description", { allowHtml: true })}
                </div>

                <!-- CTA Buttons -->
                <div class="flex flex-col gap-4 sm:flex-row">
                    <!-- <button
                        class="text-tertiary bg-light-accent rounded-full border-0 px-8 py-4 font-semibold whitespace-nowrap transition-all duration-200 hover:opacity-90"
                    >
                        {t("hero.buttons.discover")}
                    </button>
                    <button
                        class="bg-primary text-tertiary rounded-full border-0 px-8 py-4 font-semibold whitespace-nowrap transition-all duration-200 hover:opacity-90"
                    >
                        {t("hero.buttons.impulse")}
                    </button> -->
                </div>
            </div>

            <!-- Hero Illustration -->
            <div class="relative flex justify-center lg:justify-end">
                <div class="relative w-full max-w-lg">
                    <img
                        src={heroImage.src}
                        alt="Hero Illustration"
                        class="h-auto w-full scale-120"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
