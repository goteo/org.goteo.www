---
import Layout from "../../../layouts/Layout.astro";
import Summary from "../../../components/Checkout/Summary.svelte";
import PaymentMethod from "../../../components/Checkout/PaymentMethod.astro";
import Steps from "../../../components/Checkout/Steps.svelte";
import Button from "../../../components/library/Button.svelte";
import BackButton from "../../../components/BackButton.astro";
import { getDefaultCurrency } from "../../../utils/consts.ts";
import { apiAccountingsIdGet, apiGatewaysGetCollection } from "../../../openapi/client/index";

const { t } = Astro.locals;

const defaultCurrency = getDefaultCurrency();
const cookieValue = Astro.cookies.get("access-token");

if (!cookieValue) {
    throw new Error("Token not found");
}

const { accountingId, token } = JSON.parse(cookieValue.value);

const { data: accounting } = await apiAccountingsIdGet({
    path: { id: accountingId },
    headers: {
        Authorization: `Bearer ${token}`,
    },
});

const { data: paymentGateways } = await apiGatewaysGetCollection();
---

<Layout title={t("metadata.title")} description={t("metadata.description")}>
    <main class="wrapper">
        <div class="flex flex-col gap-8 py-10 lg:flex-row">
            <div class="flex w-full flex-col gap-10 lg:w-1/2">
                <BackButton />

                <div class="flex flex-col gap-4">
                    <div class="flex flex-col gap-10">
                        <div class="flex flex-col gap-4">
                            <h2 class="text-[40px]/[48px] font-bold tracking-[0%] text-black">
                                {t("payment.page.title")}
                            </h2>
                            <p class="text-content">
                                {t("payment.page.description")}
                            </p>
                        </div>

                        <PaymentMethod {paymentGateways} {accounting} />
                    </div>
                </div>
            </div>
            <div
                class="fixed right-0 bottom-0 left-0 flex h-[320px] h-fit w-full flex-col gap-6 rounded-t-[24px] border-t border-r border-l bg-white pt-6 pr-4 pb-6 pl-4 lg:relative lg:sticky lg:top-10 lg:right-auto lg:bottom-auto lg:left-auto lg:h-fit lg:w-1/2 lg:gap-6 lg:rounded-[40px] lg:border lg:p-6"
            >
                <Summary client:load {defaultCurrency} />
                <div class="lg:block" id="checkout-details">
                    <Steps step={3} client:load />
                    <div class="flex flex-col gap-4 px-0 pt-6 pb-0 lg:px-6 lg:pt-0 lg:pb-0">
                        <p class="text-content text-sm">
                            {t("checkout.summary.deduct")}
                        </p>
                    </div>
                </div>
                <div class="flex flex-col items-end px-0 pt-0 pb-0 lg:px-6 lg:pt-0 lg:pb-0">
                    <Button type="submit" form="payment" class="w-fit">
                        {t("global.btn.continue")}
                    </Button>
                </div>
            </div>
        </div>
    </main>
</Layout>
